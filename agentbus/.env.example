# AgentBus 配置示例
# 复制此文件为 .env 并填入您的配置

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# 默认模型设置
AGENTBUS_LLM_DEFAULT_MODEL=gpt-4
AGENTBUS_LLM_TIMEOUT=60
AGENTBUS_LLM_MAX_RETRIES=3

# 服务器设置
AGENTBUS_SERVER_HOST=0.0.0.0
AGENTBUS_SERVER_PORT=8000
AGENTBUS_SERVER_RELOAD=false

# 内存设置
AGENTBUS_MEMORY_MAX_MESSAGES=100
AGENTBUS_MEMORY_MAX_TOKENS=100000
AGENTBUS_MEMORY_COMPRESSION_THRESHOLD=0.85

# 远程 SSH 设置（可选）
AGENTBUS_REMOTE_ENABLED=false
AGENTBUS_REMOTE_HOST=your_remote_server.com
AGENTBUS_REMOTE_PORT=22
AGENTBUS_REMOTE_USERNAME=your_username
# AGENTBUS_REMOTE_PASSWORD=your_password
# AGENTBUS_REMOTE_PRIVATE_KEY_PATH=~/.ssh/id_rsa

# 安全设置
AGENTBUS_SECURITY_SAFE_MODE=false
AGENTBUS_SECURITY_REQUIRE_APPROVAL_FOR_DANGEROUS=true

